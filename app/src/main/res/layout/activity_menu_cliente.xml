<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="br.com.fatec.projetoOrdensDeServicos.telaCliente.TelaMenuCliente">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnSair"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="125dp"
            android:layout_marginTop="10dp"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="@string/deslogar"
            android:minWidth="48dp"
            android:minHeight="48dp"
            app:srcCompat="@drawable/users_exit_icon" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="sans-serif-black"
            android:text="@string/menu"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/azul_ab"
            android:textSize="48sp" />

        <TextView
            android:id="@+id/txtCliente"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-condensed-light"
            android:textAlignment="center"
            android:textColor="@color/azul_ab"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnCliente"
            android:layout_width="230dp"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:text="@string/configuracoes_da_conta"
            android:textAllCaps="false"
            android:textSize="20sp"
            app:cornerRadius="20dp" />

        <Button
            android:id="@+id/btnOrdemServico"
            android:layout_width="230dp"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:text="@string/solicitar_orcamento"
            android:textAllCaps="false"
            android:textSize="20sp"
            app:cornerRadius="20dp" />

        <Button
            android:id="@+id/btnConsultarServico"
            android:layout_width="230dp"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:text="@string/consultar_servicos"
            android:textAllCaps="false"
            android:textSize="20sp"
            app:cornerRadius="20dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>